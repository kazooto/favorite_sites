<div class="topics">
  <%- if false -%>
  <%= render partial: "sites/panel", as: :site, collection: @sites %>
  <%- end -%>



<!-- Tables
      ================================================== -->
      <div class="bs-docs-section">

        <div class="row">
          <div class="col-lg-12">
            <div class="page-header">
              <h1 id="tables">Listing Favorite Web Sites</h1>
            </div>

            <div class="bs-example table-responsive">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>User</th>
                    <th>SiteName</th>
                    <th>URL</th>
		    <th>Description</th>
                  </tr>
                </thead>
                <tbody>
		  <% @sites.each do |site| %>
		  <tr>
		    <td><%= site.id %></td>
		    <td><%= site.user_id %></td>
		    <td><%= site.title %></td>
		    <td><%= site.url %></td>
		    <td><%= site.description %></td>
		  </tr>
		  <% end %>
		</tbody>
	      </table>
            </div><!-- /example -->
          </div>
        </div>
      </div>
                  
</div>
